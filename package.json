{
  "name": "vscode-modern-fortran-formatter",
  "displayName": "vscode-modern-fortran-formatter",
  "description": "Modern Fortran Formatter using fprettify",
  "version": "0.0.1",
  "publisher": "yukiuuh",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:FortranFreeForm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "ModernFortranFormatter",
      "properties": {
        "modernFortranFormatter.fprettifyPath": {
          "type": "string",
          "default": "",
          "description": "The full path to fprettify"
        },
        "modernFortranFormatter.fprettifyArgs": {
          "type": "string",
          "default": "-i 4",
          "description": "fprettify arguments"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  }
}
